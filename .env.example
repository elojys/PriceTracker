# Environment variables for PriceTracker
# Copy this file to .env and fill in your actual values

# Notification method: 'pushbullet', 'sms', or 'both'
NOTIFICATION_METHOD=pushbullet

# Pushbullet settings (if using pushbullet notifications)
PUSHBULLET_API_KEY=your_key_here

# Twilio settings (if using SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
RECIPIENT_PHONE_NUMBER=your_phone_number_here

# Scraper settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
SCRAPE_INTERVAL_HOURS=12
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/price-tracker/logs/price_tracker.log
